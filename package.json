{
  "name": "health-watch",
  "displayName": "Health Watch",
  "description": "Multi-channel connectivity monitoring with automated reporting and real-time dashboards",
  "version": "1.0.8",
  "publisher": "GSejas",
  "icon": "resources/icon.png",
  "license": "MIT",
  "homepage": "https://github.com/GSejas/health-watch",
  "repository": {
    "type": "git",
    "url": "https://github.com/GSejas/health-watch.git"
  },
  "bugs": {
    "url": "https://github.com/GSejas/health-watch/issues"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Testing"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "keywords": [
    "network",
    "monitoring",
    "connectivity",
    "health",
    "vpn",
    "diagnostics"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:healthWatch.showChannelDetails"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Health Watch",
      "properties": {
        "healthWatch.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Health Watch monitoring"
        },
        "healthWatch.defaults.intervalSec": {
          "type": "number",
          "default": 15,
          "minimum": 10,
          "description": "Default probe interval in seconds (optimized for internet connectivity detection)"
        },
        "healthWatch.defaults.timeoutMs": {
          "type": "number",
          "default": 3000,
          "minimum": 1000,
          "description": "Default probe timeout in milliseconds"
        },
        "healthWatch.defaults.threshold": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "description": "Default failure threshold before marking offline"
        },
        "healthWatch.defaults.jitterPct": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "maximum": 50,
          "description": "Default jitter percentage for probe intervals"
        },
        "healthWatch.watch.defaultDuration": {
          "type": "string",
          "default": "1h",
          "enum": [
            "1h",
            "12h",
            "forever"
          ],
          "description": "Default watch duration"
        },
        "healthWatch.watch.highCadenceIntervalSec": {
          "type": "number",
          "default": 15,
          "minimum": 5,
          "description": "Probe interval during active watch in seconds"
        },
        "healthWatch.https.allowProxy": {
          "type": "boolean",
          "default": true,
          "description": "Allow HTTPS probes to use system proxy"
        },
        "healthWatch.https.userAgent": {
          "type": "string",
          "default": "Health Watch VS Code Extension",
          "description": "User agent for HTTPS probes"
        },
        "healthWatch.quietHours.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable quiet hours (suppress notifications)"
        },
        "healthWatch.quietHours.start": {
          "type": "string",
          "default": "22:00",
          "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
          "description": "Quiet hours start time (24h format)"
        },
        "healthWatch.quietHours.end": {
          "type": "string",
          "default": "08:00",
          "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
          "description": "Quiet hours end time (24h format)"
        },
        "healthWatch.report.autoOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open report when watch ends"
        },
        "healthWatch.report.includeSequenceDiagram": {
          "type": "boolean",
          "default": false,
          "description": "Include sequence diagrams in reports"
        },
        "healthWatch.report.includeTopologyDiagram": {
          "type": "boolean",
          "default": false,
          "description": "Include topology diagrams in reports"
        },
        "healthWatch.report.sloTarget": {
          "type": "number",
          "default": 99,
          "minimum": 0,
          "maximum": 100,
          "description": "SLO availability target percentage"
        },
        "healthWatch.onlyWhenFishy.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable 'only when fishy' mode for automated watch triggers"
        },
        "healthWatch.onlyWhenFishy.baselineIntervalSec": {
          "type": "number",
          "default": 60,
          "minimum": 30,
          "description": "Baseline probe interval in 'only when fishy' mode"
        },
        "healthWatch.script.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable script probes (security warning will be shown)"
        },
        "healthWatch.statusBar.icons.online": {
          "type": "string",
          "default": "$(check)",
          "description": "Icon to show when services are online"
        },
        "healthWatch.statusBar.icons.offline": {
          "type": "string",
          "default": "$(error)",
          "description": "Icon to show when services are offline"
        },
        "healthWatch.statusBar.icons.unknown": {
          "type": "string",
          "default": "$(question)",
          "description": "Icon to show when service status is unknown"
        },
        "healthWatch.statusBar.mode": {
          "type": "string",
          "enum": [
            "none",
            "minimal",
            "mini-multi-channel",
            "compact"
          ],
          "default": "minimal",
          "description": "Status bar display mode: none, minimal (single internet item), mini-multi-channel (per-channel items), or compact (single aggregated item)"
        },
        "healthWatch.statusBar.format.showLatency": {
          "type": "boolean",
          "default": false,
          "description": "When true, append short latency to per-channel status items"
        },
        "healthWatch.statusBar.format.separator": {
          "type": "string",
          "default": ":",
          "description": "Separator between channel icon and state icon in per-channel items"
        },
        "healthWatch.statusBar.format.maxChannelItems": {
          "type": "number",
          "default": 6,
          "minimum": 1,
          "description": "Maximum number of per-channel status items to show"
        },
        "healthWatch.statusBar.format.order": {
          "type": "string",
          "enum": [
            "explicit",
            "worst-first"
          ],
          "default": "explicit",
          "description": "Order of per-channel items: explicit (config order) or worst-first (offline first)"
        },
        "healthWatch.statusBar.showInternet": {
          "type": "boolean",
          "default": true,
          "description": "Show internet connectivity status in status bar"
        },
        "healthWatch.demo.incidentHistoryDays": {
          "type": "number",
          "default": 7,
          "minimum": 1,
          "maximum": 30,
          "description": "Number of days to spread demo incidents across"
        },
        "healthWatch.coordination.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable multi-window coordination to avoid duplicate monitoring"
        },
        "healthWatch.coordination.heartbeatIntervalMs": {
          "type": "number",
          "default": 5000,
          "minimum": 1000,
          "description": "Heartbeat interval for leader election in milliseconds"
        },
        "healthWatch.coordination.leaderTimeoutMs": {
          "type": "number",
          "default": 15000,
          "minimum": 5000,
          "description": "Timeout for detecting stale leaders in milliseconds"
        }
      }
    },
    "commands": [
      {
        "command": "healthWatch.startWatch",
        "title": "Start Watch",
        "icon": "$(eye)",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.stopWatch",
        "title": "Stop Watch",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.startChannelWatch",
        "title": "Start Individual Channel Watch",
        "icon": "$(eye)",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.stopChannelWatch",
        "title": "Stop Individual Channel Watch",
        "icon": "$(eye-closed)",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.runAllNow",
        "title": "Run All Probes Now",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.openLastReport",
        "title": "Open Last Report",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.showDetails",
        "title": "Show Details",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.exportJSON",
        "title": "Export Data as JSON",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.refreshChannels",
        "title": "Refresh Channels",
        "icon": "$(refresh)",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.runChannelNow",
        "title": "Run Channel Now",
        "category": "Health Watch",
        "icon": "$(play)"
      },
      {
        "command": "healthWatch.pauseChannel",
        "title": "Pause Channel",
        "category": "Health Watch",
        "icon": "$(debug-pause)"
      },
      {
        "command": "healthWatch.resumeChannel",
        "title": "Resume Channel",
        "category": "Health Watch",
        "icon": "$(debug-start)"
      },
      {
        "command": "healthWatch.stopChannel",
        "title": "Stop Channel",
        "category": "Health Watch",
        "icon": "$(stop)"
      },
      {
        "command": "healthWatch.openDashboard",
        "title": "Open Dashboard",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.addIncident",
        "title": "Add Incident",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.editIncident",
        "title": "Edit Incident",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.deleteIncident",
        "title": "Delete Incident",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.refreshIncidents",
        "title": "Refresh Incidents",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.resetDemoIncidents",
        "title": "Reset Demo Incidents",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.toggleChannelEnabled",
        "title": "Toggle Channel Enabled",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.showChannelDetails",
        "title": "Show Channel Details",
        "category": "Health Watch",
        "icon": "$(info)"
      },
      {
        "command": "healthWatch.openConfig",
        "title": "Open Configuration",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.showActiveSnoozes",
        "title": "View Active Snoozes",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.clearAllSnoozes",
        "title": "Clear All Snoozes",
        "category": "Health Watch"
      },
      {
        "command": "healthWatch.toggleDebugMode",
        "title": "Toggle Debug Mode",
        "category": "Health Watch",
        "icon": "$(debug)"
      },
      {
        "command": "healthWatch.runInternetCheck",
        "title": "Run Internet Check Now",
        "category": "Health Watch",
        "icon": "$(globe)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "healthWatch",
          "title": "Health Watch",
          "icon": "resources/activity-icon.svg"
        }
      ]
    },
    "views": {
      "healthWatch": [
        {
          "id": "healthWatchChannels",
          "name": "Channels",
          "when": "healthWatch.enabled"
        },
        {
          "id": "healthWatchStatus",
          "name": "Status",
          "when": "healthWatch.enabled"
        },
        {
          "id": "healthWatchIncidents",
          "name": "Incidents",
          "when": "healthWatch.enabled"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "healthWatch.startWatch",
          "when": "view == healthWatchChannels",
          "group": "navigation"
        },
        {
          "command": "healthWatch.refreshChannels",
          "when": "view == healthWatchChannels",
          "group": "navigation"
        },
        {
          "command": "healthWatch.openLastReport",
          "when": "view == healthWatchStatus",
          "group": "navigation"
        },
        {
          "command": "healthWatch.addIncident",
          "when": "view == healthWatchIncidents",
          "group": "navigation"
        },
        {
          "command": "healthWatch.refreshIncidents",
          "when": "view == healthWatchIncidents",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "healthWatch.runChannelNow",
          "when": "view == healthWatchChannels && viewItem =~ /^channel-(idle|running)-.*/",
          "group": "inline"
        },
        {
          "command": "healthWatch.pauseChannel",
          "when": "view == healthWatchChannels && viewItem =~ /^channel-idle-.*/",
          "group": "inline"
        },
        {
          "command": "healthWatch.resumeChannel",
          "when": "view == healthWatchChannels && viewItem =~ /^channel-paused-.*/",
          "group": "inline"
        },
        {
          "command": "healthWatch.stopChannel",
          "when": "view == healthWatchChannels && viewItem =~ /^channel-running-.*/",
          "group": "inline"
        },
        {
          "command": "healthWatch.showChannelDetails",
          "when": "view == healthWatchChannels && viewItem =~ /^channel-.*/",
          "group": "inline"
        },
        {
          "command": "healthWatch.startChannelWatch",
          "when": "view == healthWatchChannels && viewItem =~ /^channel-.*-baseline-.*/",
          "group": "watch"
        },
        {
          "command": "healthWatch.stopChannelWatch",
          "when": "view == healthWatchChannels && viewItem =~ /^channel-.*-individualwatch-.*/",
          "group": "watch"
        },
        {
          "command": "healthWatch.toggleChannelEnabled",
          "when": "view == healthWatchChannels && viewItem =~ /^channel-.*/",
          "group": "management"
        },
        {
          "command": "healthWatch.openConfig",
          "when": "view == healthWatchChannels",
          "group": "configuration"
        },
        {
          "command": "healthWatch.editIncident",
          "when": "view == healthWatchIncidents && viewItem == incident",
          "group": "inline"
        },
        {
          "command": "healthWatch.deleteIncident",
          "when": "view == healthWatchIncidents && viewItem == incident",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc --project tsconfig.test.json",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
  "test": "vscode-test --extensionDevelopmentPath=. --extensionTestsPath=./out/test/test/e2e",
    "test:unit": "vitest run --dir test/unit",
    "test:integration": "vitest run --dir test/integration",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:status": "node test/coverage-tracker.js",
    "test:e2e": "node ./out/test/test/e2e/runTest.js",
    "test:all": "npm run test:unit && npm run test:e2e",
    "vscode:package": "vsce package",
    "vscode:publish": "vsce publish"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.17.2",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "date-fns": "^3.6.0",
    "mysql2": "^3.14.3"
  }
}
